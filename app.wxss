/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
} 

.landing-bg {
  background-repeat:no-repeat;
  background-position:center;
  background-size:cover;
  height:100vh;
  font-size: 28px;
}

.landing-top {
  height:50%;
  justify-content:center;
  margin-top:50rpx;
}

.landing-bottom {
  margin-bottom:160rpx;
}

text {
  color: #535353;
}

button::after {
  border: none;
}

button {
  background-color: unset;
}

/* COMPONENTS */

/* BANNER */
.banner {
  background-size:cover !important;
  background-position:center;
  text-shadow:0 1px 3px rgba(0,0,0,0.6);
  height:350rpx;
  width:100%;
  position: relative;
  /* border-radius:5px; */
  /* margin-bottom:20px; */
}

/* HORIZONTAL SCROLL */
.scroll-row {
  display: flex;
  flex-direction: row;
}

/* TABBAR */
.tabbar {
  position:sticky;
  top:0;
  background-color:white;
  z-index: 99999;
}


/* CARD */
.card {
  width:100%;
  box-shadow:2px 2px 20px rgba(0,0,0,0.15);
  border-radius:5px;
  margin-bottom: 20px;
}

.card-content {
  margin:40rpx 40rpx;
}

.card-status {
  border-radius:8px;
  font-size:16px;
  padding:5px;
}

.status-bar {
  font-size:16px;
  padding-top:5px;
  padding-bottom:5px;
  width: 100%;
}

.button-footer {
  position:fixed;
  width: 100%;
  bottom:0;
  background-color:white;
  border-top:solid 1px #f0f0f0;
  /* height: 75px; */
}

/* AVATARS */
.avatar-sm {
  width:30px;
  height:30px;
  border-radius:50%;
  flex-shrink: 0;
  flex-grow: 0;
}

.avatar-md {
  width:60px;
  height:60px;
  border-radius:50%;
  flex-shrink: 0;
  flex-grow: 0;
}

.avatar-lg {
  width:120px;
  height:120px;
  border-radius:50%;
  flex-shrink: 0;
  flex-grow: 0;
}

.avatar-shadow {
  box-shadow: 2px 2px 20px rgba(0,0,0,0.1);
}

.icon-sm {
  width:20px;
  height:20px;
}

.border-white {
  border: solid 2px #fff;
}

.border-orange {
  border: solid 2px #F08302;
}

.border {
  border: solid 2px #535353;
}

/* BUTTONS */
.btn {
  text-align:center;
  /* padding:10px; */
  border-radius:10px;
}

.btn-sm {
  text-align:center;
  /* padding:5px; */
  border-radius:5px;
}

.btn-transparent {
  background-color:white;
  color:#F08302;
  font-weight:bold;
}

.btn-orange {
  background-color:#F08302;
  color:white;
  font-weight:bold;
}

.btn-red {
  background-color:#FFEFEF;
  color:#F98A8B;
}

.btn-ghost-orange {
  border: solid 1px #F08302;
  color:#F08302;
  font-weight:bold;
}

.icon {
  height:60rpx;
  width:60rpx;
  margin:10px;
}

/* FORM */

.form-group {
  margin-bottom:20px;
}

.form-label {
  margin-bottom: 5px;
  margin-left: 3px;
  color: #BDBDBD;
}

.form-value {
  border:solid 1px #f0f0f0;
  padding:10px;
  border-radius:5px;
}

.input-text-box {
  border: solid 1px rgba(0,0,0,0.1);
  /* box-shadow: 1px 1px 5px rgba(0,0,0,0.1); */
  border-radius: 3px;
  padding-left: 5px;
  padding-right: 5px;
  max-height: 60px;
}

/* TAB */

.tabs-underlined {
  width: 100%;
  border-bottom: solid 1px rgba(0,0,0,0.1);
  box-shadow: 0px 1px 0px rgba(0,0,0,0.15);
  min-width: 70px;
}

.tab-active {
  border-bottom: solid 3px #F08302;
  color: #535353;
}

.tab-inactive {
  border-bottom: solid 3px rgba(0,0,0,0.1);
}

/* TEXT */
.header-lg {
  /* font-size:24px; */
  font-size:20px;
}

.header-md {
  /* font-size: 18px; */
  font-size: 16px;
}

.header-sm {
  /* font-size: 16px; */
  font-size: 14px
}

.header-mini {
  /* font-size:14px; */
  font-size: 12px;
}

.content {
  font-size: 14px;
}

.bold {
  font-weight: bold;
}

.text-dark-grey {
  color: #535353;
}

.text-grey {
  color: #BDBDBD;
}

.text-white {
  color: white;
}

.text-orange {
  color: #F08302;
}

.text-green {
  color: #67C180;
}

.text-red {
  color: #F98A8B;
}

.text-shadow {
  text-shadow:0 1px 3px rgba(0,0,0,0.6);
}

/* DISPLAY */
.d-flex {
  display: flex;
}

.flex-column {
  flex-direction: column !important;
}

.space-between {
  justify-content: space-between;
}

.content-center {
  justify-content: center;
}

.text-center {
  text-align: center;
}

.text-left {
  text-align: left;
}

.text-right {
  text-align: right;
}

.item-center {
  align-items: center;
}

.flex-grow {
  flex-grow: 1;
}

/* MARGINS */
.ma {
  margin: 10px;
}

.mb {
  margin-bottom: 10px;
}

.mt {
  margin-top: 10px;
}

.my {
  margin-top: 10px;
  margin-bottom: 10px;
}

.mx {
  margin-right: 10px;
  margin-left: 10px;
}

.mr {
  margin-right: 10px;
}

.ml {
  margin-left: 10px;
}

/* PADDINGS */
.pa {
  padding: 10px;
}

.pb {
  padding-bottom: 10px;
}

.pt {
  padding-top: 10px;
}

.py {
  padding-top: 10px;
  padding-bottom: 10px;
}

.px {
  padding-right: 10px;
  padding-left: 10px;
}

.pr {
  padding-right: 10px;
}

.pl {
  padding-left: 10px;
}

.rounded {
  border-radius: 5px;
}

.w100 {
  width: 100%;
}

.w70 {
  width: 70%;
}

.w50 {
  width: 50%;
}

.w40 {
  width: 40%
}

/* COLORS */
.bg-grey {
  background:#C9C8C8;
}

.bg-red {
  background: #FF8C8C;
}

.bg-green {
  background: #67C180;
}

.bg-orange {
  background: #F08302;
}

.bg-blue {
  background: #6AC9E7;
}

/* POSITIONS */
.pos-relative {
  position: relative;
}

.pos-absolute {
  position: absolute;
}

.float-right-bottom {
  position: absolute;
  bottom: 10px;
  right: 10px;
}

.float-right-top {
  position: absolute;
  top: 10px;
  right: 10px;
}

.fixed-right-bottom {
  position: fixed;
  bottom: 10px;
  right: 10px;
}

.pos-top {
  position: absolute;
  top: 0px;
}

.pos-middle {
  display: flex;
  align-items: center;
  justify-content: center;
}

.pos-flag-right-top {
  top: 2px;
  right: 0px;
}

/* FLAG */
.flag {
  min-width: 60px;
}

/* SIGNUP PAGE STATUS TITLE */
.grid-box {
  border-bottom: solid 1px rgba(0,0,0,0.1);
  box-shadow: 1px 1px 5px rgba(0,0,0,0.1);
}

.grid-title-green {
  border-bottom: solid 3px #67C180;
}

.grid-title-orange {
  border-bottom: solid 3px #F08302;
}

.grid-title-red {
  border-bottom: solid 3px #F98A8B;
}

.grid-title-grey {
  border-bottom: solid 3px rgba(0,0,0,0.1);
}

.grid-bottom-ghost-orange {
  border-top: solid 2px #F08302;
}