/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
} 

text {
  color: #535353;
}

button::after {
  border: none;
}

button {
  background-color: unset;
}

/* COMPONENTS */

/* BANNER */
.banner {
  background-size:cover !important;
  background-position:center;
  text-shadow:0 1px 3px rgba(0,0,0,0.6);
  height:450rpx;
  width:100%;
  border-radius:15px;
  margin-bottom:20px;
}

/* CARD */
.card {
  width:100%;
  box-shadow:0 0 30px #f0f0f0;
  border-radius:15px;
  margin-bottom: 20px;
}

.card-content {
  margin:40rpx 40rpx;
}

.card-status {
  border-radius:8px;
  font-size:16px;
  padding:5px;
}

.status-bar {
  font-size:16px;
  padding-top:5px;
  padding-bottom:5px;
  width: 100%;
}

.button-footer {
  position:sticky;
  bottom:0;
  background-color:white;
  border-top:solid 1px #f0f0f0;
}

/* AVATARS */
.avatar-sm {
  width:30px;
  height:30px;
  border-radius:50%;
}

.avatar-md {
  width:60px;
  height:60px;
  border-radius:50%;
}

.avatar-lg {
  width:120px;
  height:120px;
  border-radius:50%;
}

/* BUTTONS */
.btn {
  text-align:center;
  /* padding:10px; */
  border-radius:10px;
}

.btn-sm {
  text-align:center;
  /* padding:5px; */
  border-radius:5px;
}

.btn-transparent {
  background-color:white;
  color:#F08302;
  font-weight:bold;
}

.btn-orange {
  background-color:#F08302;
  color:white;
  font-weight:bold;
}

.btn-red {
  background-color:#FFEFEF;
  color:#F98A8B;
}

.btn-ghost-orange {
  border: solid 1px #F08302;
  color:#F08302;
  font-weight:bold;
}

.icon {
  height:60rpx;
  width:60rpx;
  margin:10px;
}

/* FORM */

.form-group {
  margin-bottom:20px;
}

.form-label {
  margin-bottom: 5px;
  margin-left: 3px;
  color: #BDBDBD;
}

.form-value {
  border:solid 1px #f0f0f0;
  padding:10px;
  border-radius:5px;
}

/* TEXT */
.header-lg {
  font-size:24px;
}

.header-md {
  font-size: 18px;
}

.header-sm {
  font-size: 16px;
}

.header-mini {
  font-size:14px;
}

.content {
}

.bold {
  font-weight: bold;
}

.text-grey {
  color: #BDBDBD;
}

.text-white {
  color: white;
}

.text-orange {
  color: #F08302;
}

.text-green {
  color: #67C180;
}

/* DISPLAY */
.d-flex {
  display: flex;
}

.flex-column {
  flex-direction: column !important;
}

.space-between {
  justify-content: space-between;
}

.text-center {
  text-align: center;
}

.item-center {
  align-items: center;
}

.ma {
  margin: 10px;
}

.mb {
  margin-bottom: 10px;
}

.mt {
  margin-top: 10px;
}

.my {
  margin-top: 10px;
  margin-bottom: 10px;
}

.mx {
  margin-right: 10px;
  margin-left: 10px;
}

.mr {
  margin-right: 10px;
}

.ml {
  margin-left: 10px;
}

.rounded {
  border-radius: 10px;
}

.w100 {
  width: 100%;
}

.w70 {
  width: 70%;
}

/* COLORS */
.bg-grey {
  background:#C9C8C8;
}

.bg-red {
  background: #FF8C8C;
}

.bg-green {
  background: #67C180;
}

.bg-orange {
  background: #F08302;
}

.bg-blue {
  background: #6AC9E7;
}
