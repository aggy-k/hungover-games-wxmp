<template name="form">
<!--pages/games/create/create.wxml-->
  <form bindsubmit="formSubmit" bindreset="formReset">

    <!-- TIMESLOT PICKER -->
    <label for="timeslotPicker">Select timeslot</label>
    <picker id="timeslotPicker" class="picker" bindchange="bindPickerChange" value="{{index}}" range="{{timeslotsArray}}">
      <view class="user-input input-height">
        <text>{{timeslotsArray[index]}}</text>
      </view>
    </picker>

    <!-- DATE PICKER -->
    <label for="gameDatePicker">Date</label>
    <picker id="gameDatePicker" mode="date" value="{{date}}" start="2019-01-01" end="2020-12-31" bindchange="bindDateChange" name="date">
      <view class="picker">{{date}}</view>
    </picker>

    <!-- START TIME PICKER -->
    <label for='gameStartTimePicker'>Start Time</label>
    <picker id='gameStartTimePicker' mode="time" value="{{startTime}}" start="00:00" end="23:30" bindchange="bindStartTimeChange" name="startTime">
      <view class="picker">{{startTime}}</view>
    </picker>

    <!-- END TIME PICKER -->
    <label for='gameEndTimePicker'>End Time</label>
    <picker id="gameEndTimePicker" mode="time" value="{{endTime}}" start="00:00" end="23:30" bindchange="bindEndTimeChange" name="endTime">
      <view class="picker">{{endTime}}</view>
    </picker>

    <!-- SIGNUP DATE -->
    <label for='signUpDatePicker'>Signup Starts at</label>
    <picker id='signUpDatePicker' mode="date" value="{{signUpDate}}" start="2019-01-01" end="2020-12-31" bindchange="bindSignUpDateChange" name="signUpDate">
      <view class="picker">{{signUpDate}}</view>
    </picker>

    <!-- SIGN UP TIME -->
    <label for='signUpTimePicker'></label>
    <picker id='signUpTimePicker' mode="time" value="{{signUpTime}}" start="00:00" end="23:30" bindchange="bindSignUpTimeChange" name="signUpTime">
      <view class="picker">{{signUpTime}}</view>
    </picker>

    <!-- INPUT MAX CAPACITY -->
    <label for='maxCapacity'>Max. Capacity</label>
    <view><input id="maxCapacity" type="number" name= "maxCapacity" value="{{maxCapacity}}" placeholder="Max Capacity"></input></view>

    <!-- INPUT LOCATION -->
    <label for='location'>Location</label>
    <view><input id="location" type="text" name= "location" value="{{location}}" placeholder="Location"></input></view>

    <!-- INPUT DESCRIPTION -->
    <label for='description'>Description</label>
    <view><input id="description" type="text" name= "description" value="{{description}}" placeholder="Description"></input></view>

    <!-- INPUT ANNOUNCEMENT -->
    <label for='announcement'>Announcement</label>
    <view><input id="announcement" type="text" name= "announcement" value="{{announcement}}" placeholder="Announcement"></input></view>

    <!-- GAME STATUS RADIO BUTTON -->
    <label for='gameStatus'>Game Status</label>
    <radio-group id='gameStatus' class="radio-group" bindchange="radioChange" name="isActive">
      <label class="radio">
        <radio value="true" checked="{{gameStatus === true}}">Active</radio>
        <radio value="false" checked="{{gameStatus === false}}">Cancelled</radio>       
      </label>
    </radio-group>

    <!-- SUBMIT BUTTONS -->
    <view class='button-inline'>       
      <button class='btn-half' style="margin-bottom:20px" type="warn" bindtap="cancelSubmit">Cancel</button>     
      <button style="margin-bottom:20px" type="primary" formType="submit" loading="{{loading}}" class='btn-half'>Publish Game</button>
    </view> 
  </form>
</template>